apiVersion: v1
kind: ConfigMap
metadata:
  name: logstash-config
  namespace: demo-basic
data:
  logstash.conf: |
    input {
      beats {
        port => 5044
      }
    }

    filter {
      if [kubernetes][labels][app] {
        mutate {
          add_field => { "service" => "%{[kubernetes][labels][app]}" }
        }
      }
    }

    output {
      elasticsearch {
        hosts => ["http://elasticsearch:9200"]
        index => "logs-%{+YYYY.MM.dd}"
      }
    }
